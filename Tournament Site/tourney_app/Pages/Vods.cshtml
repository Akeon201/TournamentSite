@page
@model team_management_app.Pages.VodsModel
@{
    Layout = "_UserLayout"; // Specify the name of your new layout
}

<div class="text-center">
    <h1 class="display-4">This is the VODS page</h1>
    <p>where we will be testing video encoding, playback, etc.</p>
</div>

<div class="library-box">
    <div class="library-button">
        <p><a asp-page="/VodsLibrary">Library</a></p>
    </div>
    <div class="upload-button">
        <button id="uploadButton">Upload</button>
    </div>
</div>

<!-- Pop-up Form For Uploading -->
<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uploadModalLabel">Upload Video</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Your upload form goes here -->
                <form method="post" enctype="multipart/form-data" action="your-upload-action">
                    <div class="form-group">
                        <label for="videoFile">Choose a video file:</label>
                        <input type="file" class="form-control-file" name="videoFile" id="videoFile">
                    </div>
                    <div class="form-group">
                        <label for="videoTitle">Video Title:</label>
                        <input type="text" class="form-control" name="videoTitle" id="videoTitle">
                    </div>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Add your custom CSS styles here to customize the modal and form -->
<style>
    /* Customize the appearance of the modal and form here */
</style>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        // When the upload button is clicked
        $("#uploadButton").click(function () {
            // Show the modal
            $("#uploadModal").modal("show");
        });
    });
</script>
